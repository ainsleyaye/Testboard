<h1>Users</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-warning" %> |
          <%= link_to 'Delete', admin_user_path(user), 
                      method: :delete, 
                      data: { confirm: "Are you sure you want to delete this user?" }, 
                      class: "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>